{
  "Id": "Policy{{ ansible_date_time.epoch }}",
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AWSterraformBucket",
      "Action": "s3:*",
      "Effect": "Allow",
      "Resource": [
        "arn:aws:s3:::{{ s3_bucket }}",
        "arn:aws:s3:::{{ s3_bucket }}/*"
      ],
      "Principal": {
        "AWS": [ 
            "arn:aws:iam::{{ account_id }}:root",
            "arn:aws:iam::{{ account_id }}:user/{{ username }}"
        ],
      }
    }
  ]
}
